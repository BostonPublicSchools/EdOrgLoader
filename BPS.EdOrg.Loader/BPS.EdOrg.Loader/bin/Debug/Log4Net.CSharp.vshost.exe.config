<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="Log4Net.CSharp.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
    <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="Log4Net.CSharp.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    </sectionGroup>
  </configSections>

  <log4net>
    <appender name="IntelligentBulkLoaderAppender" type="log4net.Appender.RollingFileAppender" >
      <file value="log\IntelligentBulkLoaderAppender.log" />
      <encoding value="utf-8" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <!--<rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="5MB" />
      <staticLogFileName value="true" />-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level [%thread] %type.%method - %message%n" />
      </layout>
    </appender>
    <root>
      <level value="Error" />
      <!-- If the following line is not included the log file will not be created even if log4net is configured with this file. -->
      <appender-ref ref="IntelligentBulkLoaderAppender" />
    </root>
  </log4net>
  
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>

  <appSettings>
    <add key="XMLOutPutPath" value="C:\BostonPS\Output" />
    <add key="DataFilePath" value="C:\BostonPS\BPSTBL_DEPTTBL.txt" />
    <add key="CrossWalkFilePath" value="C:\BostonPS\PeopleSoft.txt" />
  </appSettings>
  
  <userSettings>
    <IntelligentBulkLoader.Settings>
      <setting name="DataFolder" serializeAs="String">
        <value>C:\BostonPS\Output</value>
      </setting>
      <setting name="OAuthKey" serializeAs="String">
        <value>populatedSandbox</value>
      </setting>
      <setting name="OAuthSecret" serializeAs="String">
        <value>populatedSandboxSecret</value>
      </setting>
      <setting name="WorkingFolder" serializeAs="String">
        <value />
      </setting>
    </IntelligentBulkLoader.Settings>    
  </userSettings>
  <applicationSettings>
    <IntelligentBulkLoader.Settings>
      <setting name="OAuthUrl" serializeAs="String">
        <value>http://localhost:54746</value>
      </setting>
      <setting name="ApiUrl" serializeAs="String">
        <value>http://localhost:54746/api/v2.0/</value>
      </setting>
      <setting name="SwaggerUrl" serializeAs="String">
        <value>http://localhost:54746/metadata</value>
      </setting>
      <setting name="SchoolYear" serializeAs="String">
        <value>2016</value>
      </setting>
      <setting name="XsdFolder" serializeAs="String">
        <value>C:\Ed-Fi-Core\Ed-Fi-ODS\Application\schema.codegen</value>
      </setting>
    </IntelligentBulkLoader.Settings>
  </applicationSettings>
</configuration>